<div{{ attributes }}>
    <h1 class="text-3xl mb-6">Registration</h1>
    <form>
        <div class="mb-4">
            <label for="username">Username</label>
            <input type="text"
                   id="username"
                   data-model="on(change)|username"
            />
            {% if _errors.has('username') %}
                <p class="validation-error">{{ _errors.get('username') }}</p>
            {% endif %}
        </div>

        <div class="mb-4">
            <label for="first_name">First Name</label>
            <input type="text"
                   id="first_name"
                   data-model="on(change)|firstName"
            />
            {% if _errors.has('firstName') %}
                <p class="validation-error">{{ _errors.get('firstName') }}</p>
            {% endif %}
        </div>

        <div class="mb-4">
            <label for="last_name">Last Name</label>
            <input type="text"
                   id="last_name"
                   data-model="on(change)|lastName"
            />
            {% if _errors.has('lastName') %}
                <p class="validation-error">{{ _errors.get('lastName') }}</p>
            {% endif %}
        </div>

        <div class="mb-2">
            <label for="password">Password</label>
            <input type="password"
                   id="password"
                   data-model="on(change)|password"
            />
            {% if _errors.has('password') %}
                <p class="validation-error">{{ _errors.get('password') }}</p>
            {% endif %}
        </div>

        <div>
            <label for="password_confirmation">Password Confirmation</label>
            <input type="password"
                   id="password_confirmation"
                   data-model="on(change)|passwordConfirmation"
            />
            {% if _errors.has('passwordConfirmation') %}
                <p class="validation-error">{{ _errors.get('passwordConfirmation') }}</p>
            {% endif %}
        </div>

        <div class="text-right mt-6">
            <button type="button"
                    class="btn primary"
                    data-action="live#action"
                    data-live-action-param="submit"
                    {{ this.isRegisterButtonDisabled ? "disabled" : "" }}
            >
                Register to the forum
            </button>
        </div>
    </form>
</div>
