<div{{ attributes }}
    class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 {{ isShown == false ? 'hidden' : '' }}"
>
    <div class="bg-white rounded-lg shadow-lg p-6 w-11/12 max-w-xl">
        <div class="border-b pb-2">
            <h2 class="text-xl font-semibold">{{ actionName }} Thread</h2>
        </div>
        <div class="py-4">
            <div class="mb-4">
                <label for="title">Title</label>
                <input type="text" id="title" data-model="norender|thread.title" />
                {% if _errors.has('thread.title') %}
                    <p class="validation-error">{{ _errors.get('thread.title') }}</p>
                {% endif %}
            </div>
            <div class="mb-4">
                <label for="content">Content</label>
                <textarea id="content" rows="12" data-model="norender|thread.content"></textarea>
                {% if _errors.has('thread.content') %}
                    <p class="validation-error">{{ _errors.get('thread.content') }}</p>
                {% endif %}
            </div>
        </div>
        <div class="flex justify-end gap-1 pt-2">
            <button class="btn secondary" data-action="live#action" data-live-action-param="hideModal">Cancel</button>
            <button class="btn primary" data-action="live#action" data-live-action-param="saveThread">
                Save
            </button>
        </div>
    </div>
</div>
